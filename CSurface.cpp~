#include "CSurface.h"

CSurface::CSurface(){
}

SDL_Surface * CSurface::OnLoad(char * File)
{
  SDL_Surface * surfTemp = NULL; 
  SDL_Surface * surfReturn = NULL; 

  if((surfTemp = SDL_LoadBMP(File)) == NULL)
    {
      return NULL;
    }

  surfReturn = SDL_DisplayFormat(surfTemp);
  SDL_FreeSurface(surfTemp);

  return surfReturn; 
}
